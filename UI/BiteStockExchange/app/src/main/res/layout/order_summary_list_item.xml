<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/order_summary_item_name"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Pizza"/>

    <Button
        android:id="@+id/order_summary_item_quantity_add_button"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="15dp"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/order_summary_item_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="3"
        android:padding="10dp"/>

    <Button
        android:id="@+id/order_summary_item_quantity_remove_button"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="15dp"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/order_summary_item_total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="$15"
        android:padding="10dp"/>

</LinearLayout>